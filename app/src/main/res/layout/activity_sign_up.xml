<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".ui.sign_up.SignUpActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/component_header_wide_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ytkxlau8657"
        android:layout_below="@id/topbar"
        android:gravity="center|start"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="Đăng ký"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="#e6e6e6" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="0dp"
                    android:paddingVertical="1dp"
                    android:text="Công ty trực thuộc"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <include
                    layout="@layout/item_layout_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp" />

                <TextView
                    android:id="@+id/asuTvNoCompanySelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Vui lòng chọn công ty trực thuộc"
                    android:textColor="#F00"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:paddingVertical="1dp"
                    android:text="Họ và tên"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/asuEdtFullName"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="Tên doanh nghiệp"
                    android:hint="Họ và tên"
                    android:inputType="textAutoComplete|textAutoCorrect|textCapWords"
                    android:lines="1"
                    android:maxLength="40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="1dp"
                    android:text="Tên tài khoản"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/asuEdtUsername"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="Tên doanh nghiệp"
                    android:digits="qwertzuiopasdfghjklyxcvbnmQWERTZUIOPASDFGHJKLYXCVBNM0123456789_"
                    android:hint="Tên tài khoản"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="1dp"
                    android:text="Mật khẩu"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/asuEdtPassword"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="Tên doanh nghiệp"
                    android:hint="123456"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="40" />

                <Button
                    android:id="@+id/asuBtnSignUp"
                    style="@style/Button.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:text="Đăng ký" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ytkxlau8657"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đã có tài khoản? "
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSignInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:text="Đăng nhập"
            android:textColor="@color/text_link_blue"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>