<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/masterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account_info.AccountInfoActivity">

    <include layout="@layout/component_header_wide_bar" />

    <RelativeLayout
        android:layout_width="87.5dp"
        android:layout_height="87.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="-40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aaiCivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_primary"
            android:src="@drawable/holder" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="1.75dp"
            android:layout_marginRight="1.75dp"
            android:layout_marginBottom="0.65dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/aaiSvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="60dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:paddingVertical="1dp"
                    android:text="Tên Tài khoản"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/aaiEdtUsername"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:autofillHints="Tên doanh nghiệp"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Tên Tài khoản"
                    android:inputType="textAutoComplete|textAutoCorrect|textCapWords"
                    android:lines="1"
                    android:maxLength="40"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:paddingVertical="1dp"
                    android:text="Công ty trực thuộc"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/aaiEdtCompanyName"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:autofillHints="Địa chỉ"
                    android:clickable="false"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint="Công ty trực thuộc"
                    android:inputType="text|textAutoComplete"
                    android:lines="1"
                    android:maxLength="255"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:paddingVertical="1dp"
                    android:text="Họ và tên"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/aaiEdtFullName"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:autofillHints="Mã số thuế"
                    android:hint="Họ và tên"
                    android:inputType="textPersonName|textCapWords"
                    android:lines="1"
                    android:maxLength="100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:paddingVertical="1dp"
                    android:text="Mật khẩu"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/aaiEdtPassword"
                    style="@style/EditText.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:autofillHints="Website"
                    android:hint="Để trống nếu không đổi"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="255" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/aaiIvLangVI_VN"
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/vn" />

                        <ImageView
                            android:id="@+id/aaiIvLangEN_US"
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/us" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/aaiTvLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Đăng xuất"
                        android:textColor="#F38500"
                        android:textSize="18sp"
                        android:textStyle="italic" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/aaiRlBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/aaiBtnCancel"
                            style="@style/Button.DangerOutline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:text="Hủy" />

                        <Button
                            android:id="@+id/aaiBtnSave"
                            style="@style/Button.Default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Lưu lại" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/btmNavLayout"
            layout="@layout/component_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>