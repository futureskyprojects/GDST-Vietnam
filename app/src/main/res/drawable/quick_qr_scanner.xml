<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="300" android:exitFadeDuration="300">
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="100dp" android:topLeftRadius="100dp" />
            <gradient android:angle="0" android:endColor="#ED8F03" android:startColor="#FFB75E" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="100dp" android:topLeftRadius="100dp" />
            <solid android:color="#ED8F03" />
        </shape>
    </item>
</selector>